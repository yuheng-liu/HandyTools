<!--        <item name="textAppearanceHeadline6"></item> &lt;!&ndash; medium 20sp text &ndash;&gt;-->
<!--        <item name="textAppearanceSubtitle1"></item> &lt;!&ndash; regular 16sp text &ndash;&gt;-->
<!--        <item name="textAppearanceSubtitle2"></item> &lt;!&ndash; medium 14sp text &ndash;&gt;-->
<!--        <item name="textAppearanceBody1"></item> &lt;!&ndash; regular 16sp text &ndash;&gt;-->
<!--        <item name="textAppearanceBody2"></item> &lt;!&ndash; regular 14sp text &ndash;&gt;-->
