<!--        <item name="textAppearanceOverline"></item> &lt;!&ndash; regular all caps 10sp text &ndash;&gt;-->

        <!-- Shapes -->
<!--        <item name="shapeAppearanceSmallComponent"></item> &lt;!&ndash; buttons/chips/textFields/etc, rounded 4 dp corners &ndash;&gt;-->
<!--        <item name="shapeAppearanceMediumComponent"></item> &lt;!&ndash; cards/dialogs/datePickers/etc, rounded 4 dp corners &ndash;&gt;-->
<!--        <item name="shapeAppearanceLargeComponent"></item> &lt;!&ndash; bottomSheets/etc, rounded 0 dp corners (its a square) &ndash;&gt;-->

        <!-- Widgets -->
        <item name="materialButtonStyle">@style/AppTheme.Button</item> <!-- defaults to contained -->
        <item name="materialButtonOutlinedStyle">@style/AppTheme.OutlinedButton</item>
        <item name="android:spinnerStyle">@style/AppTheme.Spinner</item>
        <item name="android:textViewStyle">@style/AppTheme.TextView</item>
        <item name="imageButtonStyle">@style/AppTheme.ImageButton</item>
        <item name="materialCardViewStyle">@style/AppTheme.CardView</item>
        <item name="textInputStyle">@style/AppTheme.TextInput</item>

    </style>

    <style name="AppTheme.TextInput" parent="Widget.Design.TextInputLayout">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="android:background">?colorSurface</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">?colorAccent</item>
    </style>

    <style name="AppTheme.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/selector_outlined_button_toggle_bg_color</item>
        <item name="android:textColor">@color/selector_outlined_button_toggle_text_color</item>
        <item name="strokeColor">?colorPrimary</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="AppTheme.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="backgroundTint">?colorAccent</item>
    </style>

    <style name="AppTheme.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
    </style>

    <style name="AppTheme.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="AppTheme.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">1dp</item>
        <item name="cardBackgroundColor">?colorSurface</item>
    </style>

</resources>
